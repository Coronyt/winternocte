# update all cells in the canvas to match the currently loaded level
func update_cells(canvas):
	var x_ind = 0
	var y_ind = 0
	for row in canvas.get_children():
		for cell in row.get_children():
			cell.set_cell(demo_level[y_ind][x_ind])
			x_ind += 1
		y_ind += 1
		x_ind = 0

